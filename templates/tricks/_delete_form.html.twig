<form method="post" style="display:inline" action="{{ path('app_tricks_delete', {'slug': trick.slug}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
    <button class="btn"><i class="fa-solid fa-trash" style="color:#b80000"></i></button>
</form>
