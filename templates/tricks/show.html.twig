{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <main id="main">
        <div class="container mt-5">
            <div class="row justify-content-center mt-5">
                <div class="col-md-10 col-md-offset-1 mt-5 mb-4">

                    <div class="card mt-5">
                        {% for picture in trick.pictures|slice(0,1) %}
                            <img class="card-img-top" src="{{ asset('/uploads/'~picture.name) }}" alt="Stalefish-main">
                        {% endfor %}
                        <div class="card-body">
                            <ul class="list-inline trick-data">
                                <h4 class="card-title"><strong>{{ trick.name }}</strong></h4>
                                <li class="list-inline-item">
                                    Ajouté le {{ trick.createdAt ? trick.createdAt|date('Y-m-d') : '' }} (<small>Mise à
                                        jour le : {{ trick.updatedAt ? trick.updatedAt|date('Y-m-d') : '' }}</small>)
                                </li>
                                |
                                <li class="list-inline-item">
                                    Catégorie : {{ trick.category }}
                                </li>
                            </ul>
                            <hr>
                            <div class="row d-none d-lg-flex load-media">
                                <div class="col-lg-6 col-md-12">
                                    <div id="carouselExampleControls" class="carousel slide mt-3 mb-2"
                                         data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            {% for picture in trick.pictures %}
                                                <div {% if loop.index0 == 0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
                                                    <img src="{{ asset('/uploads/'~picture.name) }}" class="w-100"
                                                         alt="">
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <button class="carousel-control-prev" type="button"
                                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div id="carouselExampleControls" class="carousel slide mt-3 mb-2"
                                         data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            {% for picture in trick.pictures %}
                                                <div {% if loop.index0 == 0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
                                                    <img src="{{ asset('/uploads/'~picture.name) }}" class="w-100"
                                                         alt="">
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <button class="carousel-control-prev" type="button"
                                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <a href="#" id="loadMedia" class="d-md-block d-lg-none">
                                    <button class="btn btn-outline-secondary">Afficher les médias</button>
                                </a>
                                <a href="#" id="hideMedia" class="d-none d-md-none d-lg-none">
                                    <button class="btn btn-outline-secondary mt-3">Masquer les médias</button>
                                </a>
                            </div>
                            <hr>
                            <h5 class="card-title">Description</h5>
                            <p class="card-text text-justify">{{ trick.description }}</p>
                        </div>
                    </div>
                    <span class="comments-anchor" id="comments-block"></span>
                    {% if app.user %}
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'} }) }}
                            <div class="row justify-content-center">
                                <div class="col-sm-12 col-md-6 col-lg-8 col-xl-8 ">
                                    {{ form_row(form.content) }}
                                    {{ form_row(form.submit) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    {% else %}
                        <div class="col-md-12 px-0 mb-30">
                            <div class="comments text-center p-3">
                                <p><a href="{{ path('app_register') }}">Inscrivez-vous</a> ou <a href="{{ path('app_login') }}">connectez
                                        vous</a> pour commenter cet article</p>
                            </div>
                        </div>
                    {% endif %}
                    <div class="col-md-12 pl-0 pr-0">
                        <div class="comments text-left padDiv mb-30">
                            <div class="entry-comments">
                                <h6 class="mb-30">{{ countComments > 1 ? countComments ~ " commentaires" : countComments ~ " commentaire" }}</h6>
                                <ul class="entry-comments-list list-unstyled">
                                    {% if comments is not empty %}
                                        {% for comment in comments %}
                                            <span class="comment-anchor" id="10"></span>
                                            <li>
                                                <div class="entry-comments-item">
                                                    {% if comment.user.avatar != null %}
                                                        <img src="{{ asset('/uploads/'~ comment.user.avatar ) }}"
                                                             class="entry-comments-avatar" alt="TestPseudo">
                                                    {% else %}
                                                        <i class="fas fa-user-circle fa-sm"></i>
                                                    {% endif %}
                                                    <div class="entry-comments-body">
                                                        <span class="entry-comments-author"><p>{{ comment.user.name }}</p></span>
                                                        <span class="comment-date">{{ comment.createdAt|date("d/m/Y H:i") }}</span>
                                                        <p class="comment-content text-justify">{{ comment.content|nl2br }}</p>
                                                    </div>
                                                </div>
                                            </li>
                                        {% endfor %}
                                    {% else %}
                                        <p class="p-2">No comments. Be the first to discuss about this trick !</p>
                                    {% endif %}
                                </ul>
                            </div>

                            {% if countComments > 8 %}
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12 text-center section-loadmore-comments">
                                            <button class="btn btn-info loadmore-comments" id="showMoreOffsetComments" data-href="{{ path('app_tricks_show', {'id': trick.id}) }}">Voir plus</button>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('loadMoreComments') }}
{% endblock %}
